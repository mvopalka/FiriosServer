@model FiriosServer.Entity.IncidentEntity

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>Výjezdu</h4>
    <hr />
    <dl class="row">
        @if (!string.IsNullOrEmpty(Model.Mpd))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Mpd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Mpd)
            </dd>

        }
        
        @if (!string.IsNullOrEmpty(Model.Region))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Region)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Region)
            </dd>
        }
        
        @if (!string.IsNullOrEmpty(Model.Address))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
        }
        
        @if (!string.IsNullOrEmpty(Model.SubType))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubType)
            </dd>
        }
        
        @if (!string.IsNullOrEmpty(Model.Type))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.ObjectName))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ObjectName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ObjectName)
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.AdditionalInformation))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdditionalInformation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdditionalInformation)
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.Level) && Model.Level != " ")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Level)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Level)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
        @if (Model.Users != null && Model.Users.Count != 0)
        {
            <dt class="col-sm-2">

                <span> @Html.DisplayNameFor(model => model.Users):</span>
            </dt>
            <dd class="col-sm-10">
            </dd>
        }

        @* @foreach (var item in Model.Incidents)
        {
            <dd class="col-sm-1">
            </dd>
            <dd class="col-sm-2">
                @Html.DisplayFor(modelItem => item.IncidentEntity.Type)
            </dd>
            <dd class="col-sm-9">
                <a asp-action="Details" asp-controller="Incident" asp-route-id="@item.IncidentEntity.Id">@Html.DisplayFor(modelItem => item.IncidentEntity.Date)</a>
            </dd>
        }*@
    </dl>
    
    @if (Context.Items.ContainsKey("admin"))
    {
        if (Model.IsActive)
        {
            <a asp-controller="Incident" asp-action="ChangeIncidentStatus" asp-route-id="@Model.Id">Uzavřít výjezd</a><br/>
        }
        else
        {
            <a asp-controller="Incident" asp-action="ChangeIncidentStatus" asp-route-id="@Model.Id">Otevřít výjezd</a><br/>

        }
    }
    
    @if(Model.Users != null && Model.Users.Count != 0)
    {
        <table class="table">
            <thead>
            <tr>
                <th class="table-2-hide">
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.Titules)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.FirstName)
                </th>
                <th class="table-2-hide">
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.MiddleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.SecondName)
                </th>
                <th class="table-2-hide">
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.Email)
                </th>
                <th class="table-2-hide">
                    @Html.DisplayNameFor(model => model.Users[0].UserEntity.Position)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Users) {
                @if (item.State == "yes" || item.State == "on_place")
                {
                    <tr>
                        <td class="table-2-hide">
                            @Html.DisplayFor(modelItem => item.UserEntity.Titules)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEntity.FirstName)
                        </td>
                        <td class="table-2-hide">
                            @Html.DisplayFor(modelItem => item.UserEntity.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEntity.SecondName)
                        </td>
                        <td class="table-2-hide">
                            @Html.DisplayFor(modelItem => item.UserEntity.Email)
                        </td>
                        <td class="table-2-hide">
                            @Html.DisplayFor(modelItem => item.UserEntity.Position)
                        </td>
                        <td>
                            @*                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
    *@                <a asp-action="Details" asp-controller="User" asp-route-id="@item.UserEntity.Id">Detail</a> @*|*@
                            @*                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    *@            </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    }
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |*@
    <a asp-action="Index">Zpět na výjezdy</a>
</div>
